
<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>

  <body>
    <div class="titulo-fufu">
      <i class="fa-solid fa-paintbrush"></i>
      <h1 class="logo"><a href="/">Artistica Fufu</a></h1>
    </div>

    <div class="container-register">
      <div class="title">Creá tu cuenta</div><br>

      <div class="content">
        <form id="formulario" action="/register" method="post" enctype="multipart/form-data">
          <div class="user-details">

            <div class="input-box">
              <span class="details">Nombre</span>
              <input type="text" placeholder="Ingrese nombre" name="nombre" id="nombre"
                value="<%= locals.oldBody && oldBody.nombre? oldBody.nombre: '' %>">
                <div id="errorNombre"></div>
                <% if (locals.error && error.nombre) { %>
                <p>
                  <%= error.nombre.msg %>
                </p>
                <% } %>
            </div>

            <div class="input-box">
              <span class="details">Apellido</span>
              <input type="text" placeholder="Ingrese apellido" name="apellido" id="apellido"
                value="<%= locals.oldBody && oldBody.apellido? oldBody.apellido: '' %>">
                <div id="errorApellido"></div>
                <% if (locals.error && error.apellido) { %>
                  <p>
                    <%= error.apellido.msg %>
                  </p>
                  <% } %>
            </div>

            <div class="input-box">
              <span class="details">Nombre de usuario</span>
              <input type="text" placeholder="Ingrese usuario" name="nombreUsuario" id="nombreUsuario"
                value="<%= locals.oldBody && oldBody.nombreUsuario? oldBody.nombreUsuario: '' %>">
                <div id="errorUsuario"></div>
                <% if (locals.error && error.nombreUsuario) { %>
                  <p>
                    <%= error.nombreUsuario.msg %>
                  </p>
                  <% } %>
            </div>

            <div class="input-box">
                <span class="details">Email</span>
                <input type="email" placeholder="Ingrese email" name="emailRegistro" id="emailRegistro"
                value="<%= locals.oldBody && oldBody.emailRegistro? oldBody.emailRegistro: '' %>">
                <div id="errorMail"></div>
                  <% if (locals.error && error.emailRegistro) { %>
                    <p>
                      <%= error.emailRegistro.msg %>
                    </p>
                <% } %>
            </div>

            <div class="input-box">
              <span class="details">Número de teléfono</span>
              <input type="text" placeholder="Ingrese número" name="numeroTelefono" id="numeroTelefono">
              <div id="errorTelefono"></div>
                  <% if (locals.error && error.numeroTelefono) { %>
                    <p>
                      <%= error.numeroTelefono.msg %>
                    </p>
                <% } %>
            </div>

            <div class="input-box">
              <span class="details">Contraseña</span>
              <input type="password" placeholder="Ingrese contraseña" name="passwordRegistro" id="passwordRegistro">
              <div id="errorContraseña"></div>
                <% if (locals.error && error.passwordRegistro) { %>
                  <p>
                    <%= error.passwordRegistro.msg %>
                  </p>
                <% } %>
            </div>

            <div class="input-box">
              <span class="details">Confirme contraseña</span>
              <input type="password" placeholder="Confirme contraseña" name="checkPassword" id="checkPassword">
            </div>

            <div class="input-box">
              <span class="details">Ingrese una imagen</span>
              <input type="file" placeholder="Ingrese nombre" name="image" id="image">
              <div id="errorImage"></div>
              <% if (locals.error && error.image) { %>
                <p>
                  <%= error.image.msg %>
                </p>
              <% } %>
            </div>

          </div>

          <div id="error"></div>

          <div class="yatienecuenta">
            <h6>¿Ya tenés una cuenta?</h6>
            <a href="/login">Ingresá con tu cuenta</a>
          </div>
      </div>

      <div class="button" class="cyberpunk-button">
        <input type="submit" value="Registrarse" class="cyberpunk-button">
      </div>

      </form>
    </div>
    </div>
  </body>

  <script src="/js/registerValidation.js"></script>

</html>
