<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
	<%- include('../partials/header.ejs') %>
		<!-- Estos son los nombres que vienen del JSON -->

		<!-- Este ID viene del  JSON -->
		<main class="container-detalles" id="detalles">
			<article class="detalle-grid">
			<% if (producto.image) { %>
				<img class="img-fluid" src="/images/products/<%= producto.image %>" alt="<%= producto.image %>">
			<% } %>
			<% if (!producto.image) { %>
				<img src="https://upload.wikimedia.org/wikipedia/commons/3/39/Peu404vitfr.jpg"
				alt="">
			<% } %>

				<div class="detalles-content">
					<h3 class="nombre-producto">
						<%= producto.name %>
					</h3>
					
					<p class="price"><b>Precio: </b> $<%= producto.price %></p>

					<p class="description">
						<b>Descripción: </b> <span><%= producto.description %></span>
						
					</p>
					<div class="bottom">
						<div class="btn__group addcart">
							<a>Añadir al carrito</a>
						</div>
						<% if (locals.userIsAdmin) { %>
						 
							<div class="btn__group">
								<a href="/products/edit/<%= producto.id %>">Editar</a>
							</div>
							<div class="btn__group">
								<a href="/products/delete/<%= producto.id %>">Eliminar</a>
							</div>
						<% } %>
					</div>
				</div>
			</article>
		</main>

		<%- include('../partials/footer.ejs') %>
			</body>

</html>